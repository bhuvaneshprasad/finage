{
  "name": "@finage/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@finage/core": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.4",
    "nanoid": "^5.1.6",
    "pg": "^8.17.1",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
